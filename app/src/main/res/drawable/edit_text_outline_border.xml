<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/dark_gray" /> <!-- white background -->

    <!-- Outline border -->
    <stroke
        android:width="2dp"
        android:color="#808080" /> <!-- gray border -->

    <!-- Corners for rectangle -->
    <corners android:radius="0dp" /> <!-- rounded corners (optional, set to 0dp for sharp corners) -->

    <!-- Padding (optional) -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />
</shape>